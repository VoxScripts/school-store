<% layout('layout', { title: 'Pay with Card' }) %>
<section>
  <h1>Pay with Card</h1>
  <p>You'll be redirected to Ziina to complete payment for <strong>AED <%= fmtMoney(total) %></strong>.</p>
  <p><a class="btn primary" href="<%= url %>">Continue to Ziina</a></p>
  <p class="muted">If nothing happens, click the button above.</p>
  <script>
    setTimeout(()=>{ window.location.href = "<%= url %>"; }, 1200);
  </script>
</section>
