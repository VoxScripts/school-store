<% layout('layout', { title: 'Orders' }) %>
<section>
  <h1>Orders</h1>
  <table class="table">
    <thead><tr><th>ID</th><th>Customer</th><th>Payment</th><th>Status</th><th>Total</th><th>When</th><th></th></tr></thead>
    <tbody>
      <% rows.forEach(o=>{ %>
        <tr>
          <td>#<%= o.id %></td>
          <td><strong><%= o.customer_name %></strong><div class="muted"><%= o.customer_phone %> â€¢ <%= o.customer_class %></div></td>
          <td><%= o.payment_method %></td>
          <td><span class="badge"><%= o.status %></span></td>
          <td>AED <%= fmtMoney(o.total_amount) %></td>
          <td><%= o.created_at %></td>
          <td class="right"><a href="/admin/orders/<%= o.id %>" class="btn small">View</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
